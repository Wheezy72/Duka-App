APP_NAME=Duka-App
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (for desktop installs we recommend SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=

# Cache & sessions
CACHE_STORE=file
SESSION_DRIVER=file

# Queue
QUEUE_CONNECTION=sync

# Filesystems
FILESYSTEM_DISK=local

# M-PESA Daraja (Safaricom)
MPESA_ENV=sandbox             # sandbox or production
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=${APP_URL}/payments/mpesa/callback

# Bank gateway (example: Stripe or other REST API)
BANK_GATEWAY_PROVIDER=stripe
BANK_GATEWAY_API_KEY=
BANK_GATEWAY_WEBHOOK_SECRET=
BANK_GATEWAY_CALLBACK_URL=${APP_URL}/payments/bank/callback

# WhatsApp Business Cloud API
WHATSAPP_ENABLED=false
WHATSAPP_API_BASE=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_DEFAULT_TEMPLATE=receipt_template_name

# AI / LLM provider (server-side integration)
AI_PROVIDER=openai
AI_API_KEY=
AI_MODEL=gpt-4.1-mini

# Google OAuth (Socialite)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback